---
import { Image } from "astro:assets";

import info from "../data/info.json";

import Layout from "../layouts/Layout.astro";
import Header from "../layouts/Header.astro";
import Footer from "../layouts/Footer.astro";

import Link from "../components/Link.astro";
import LinksList from "../components/LinkList.astro";
---

<Layout>
  <!-- Header -->
  <Header />

  <!-- Info Section -->
  <section class="container mx-auto py-8 flex">
    <div class="w-1/3 flex relative pl-10">
      <div
        class="-rotate-90 border-b flex justify-between items-center absolute top-[198px] left-[-199px] w-[428px] h-8 text-xs border-primary-900"
      >
        <LinksList
          items={info.social}
          className="w-full justify-between items-center"
        />
      </div>
      <Image
        src="/public/images/Hero.jpg"
        width="300"
        height="300"
        loading={"eager"}
        alt="ahmed omran"
        class="grayscale hover:grayscale-0 transition-all duration-500"
      />
    </div>
    <div class="w-2/3 px-4 flex flex-col justify-between">
      <div class="flex justify-start items-center py-8">
        <Link href="/about" class="text-sm flex items-center gap-1">
          [ Who I'm ? ]
        </Link>
      </div>

      <p class="text-5xl font-mainHead indent-32 leading-[4rem]">
        My name is {info.name}. I'm a <span class="text-main">
          {info.heroRole}
        </span> From in {info.location.city} ({
          info.location.country.slice(0, 2).toUpperCase()
        }).
      </p>
    </div>
  </section>

  <!-- Last Projects -->
  <section class="container mx-auto py-20">
    <div
      class="w-full flex justify-between items-center border-b border-primary-900 mb-8"
    >
      <h4 class="text-6xl">Latest Project</h4>
      <Link href="/projects">[ View All Work ]</Link>
    </div>
    <div class="md:px-32 py-8 relative">
      <div class="relative group">
        <Image
          src={info.projects[0].img}
          alt={info.projects[0].title}
          loading="lazy"
          class="w-full grayscale group-hover:grayscale-0 transition-all duration-500"
          width={600}
          height={400}
        />
        <div
          class="absolute inset-0 p-4 sm:p-6 lg:p-8 text-tertiary text-sm font-subhead flex flex-col
               opacity-0 group-hover:opacity-100 transition-opacity duration-500"
          style={{ background: "rgba(0,0,0,0.6)" }}
        >
          <div
            class="flex flex-col sm:flex-row justify-between items-start gap-4"
          >
            <div
              class="flex flex-col sm:flex-row justify-start items-start gap-4"
            >
              <div class="flex flex-col">
                <span class="overlay-text text-xs text-secondary-400"
                  >Company</span
                >
                <span class="overlay-text">[ {info.projects[0].client} ]</span>
              </div>
              <div class="sm:ml-4 sm:border-l sm:pl-4">
                <span class="overlay-text text-xs text-secondary-400"
                  >Category</span
                >
                <ul>
                  {
                    info.projects[0].type.map((t) => (
                      <li class="overlay-text">[ {t} ]</li>
                    ))
                  }
                </ul>
              </div>
            </div>
            <div class="w-1/3">{info.projects[0].description}</div>
          </div>
          <div
            class="flex flex-col sm:flex-row justify-between items-start sm:items-end flex-1 gap-4 mt-4"
          >
            <h5
              class="overlay-text text-3xl sm:text-4xl lg:text-6xl xl:text-8xl font-subhead"
            >
              {info.projects[0].title}
            </h5>
            <Link
              href={`/projects/${info.projects[0].title.toLowerCase().replace(" ", "-")}`}
            >
              [ View Case ]
            </Link>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact sections -->
  <section class="px-4 py-20 container mx-auto flex flex-col items-center">
    <div
      class="w-full flex justify-between items-center border-b border-primary-900 mb-8"
    >
      <h4 class="text-6xl">Let's Talk</h4>
      <Link href="/contact">[ drop me a line ]</Link>
    </div>

    <!-- Hero Text -->
    <h1
      id="title"
      class="font-mainHead text-4xl sm:text-6xl lg:text-8xl xl:text-[5rem] leading-tight lg:leading-[6rem] text-center py-10 lg:py-16"
    >
      YOUR VISION. MY CODE. <span class="text-main">EXTRAORDINARY</span> RESULTS.
    </h1>

    <!-- redirect buttons -->
    <div
      class="w-full flex flex-col justify-end gap-4 items-end text-sm font-subhead capitalize overflow-y-hidden space-y-8"
    >
      <p id="title" class="w-1/4">
        I'm so social, so Whether you have a project in mind or just want to say
        hello, I'd love to hear from you. You can also use the [Contact] page.
      </p>
      <div class="flex justify-end items-center gap-4">
        <span class="redirect-btns overflow-y-hidden">
          <Link href="mailto:omran.a.jr@gmail.com" target="_blank">
            [ {info.email} ]
          </Link>
        </span>
        <span class="redirect-btns overflow-y-hidden">
          <Link href="/contact">[ Contact ]</Link>
        </span>
      </div>
    </div>
  </section>

  <Footer nextPage="/about" />
</Layout>
