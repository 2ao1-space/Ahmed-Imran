---
import Image from "astro/components/Image.astro";
import Footer from "../layouts/Footer.astro";
import Header from "../layouts/Header.astro";
import Layout from "../layouts/Layout.astro";
import info from "../data/info.json";
import Link from "../components/Link.astro";
import SectionHeader from "../components/SectionHeader.astro";
---

<Layout>
  <Header />

  <section class="container mx-auto py-20">
    <!-- Hero Section -->
    <section class="grid grid-cols-12 pb-10">
      <div class="col-span-2 text-end">[ I'm ]</div>
      <div class="col-span-10 flex justify-end w-full">
        <p class="text-5xl capitalize indent-28 mb-12 font-mainHead">
          A <span class="text-main">{info.jTitle}</span> from {
            info.location.city
          }, I believes that <span class="text-main">no more</span> complexity â€”
          life's
          <span class="text-main">complicated</span> enough.
        </p>
      </div>
    </section>

    <!-- Personal Story -->
    <section class="grid grid-cols-12">
      <div class="col-span-4">
        <Image
          src={info.images.Hero}
          alt={`i'm ahmed omran`}
          loading={"eager"}
          width={200}
          height={200}
          class="grayscale hover:grayscale-0 transition-all duration-500"
        />
      </div>
      <div class="col-span-6 uppercase text-sm">
        {info.story.map((text) => <p class="mb-4">{text}</p>)}
      </div>
    </section>

    <!-- Experiance section -->
    <section class="grid grid-cols-12 py-20">
      <SectionHeader title="Experiance" class="col-span-12">
        {
          info.social
            .filter((link) => link.name === "Linkedin")
            .map((item) => (
              <Link href={item.path} target="_blank">
                [{item.name}]
              </Link>
            ))
        }
      </SectionHeader>
      <div class="col-span-12 flex justify-end">
        <ul class="w-1/2">
          {
            info.experiance.map((exp) => (
              <li class="border-b border-primary-900 py-6 flex gap-12 justify-between">
                <div class="flex flex-col w-1/3">
                  <span class="uppercase text-xs text-secondary-500">
                    Company
                  </span>
                  <div class="flex justify-start items-center">
                    <Link href={exp.url} target="_blank">
                      {exp.name}
                    </Link>
                  </div>
                </div>
                <div class="flex flex-col w-1/3">
                  <span class="uppercase text-xs text-secondary-500">
                    Position
                  </span>
                  <p>{exp.role}</p>
                </div>
                <div class="flex flex-col w-1/3">
                  <span class="uppercase text-xs text-secondary-500">
                    Period
                  </span>
                  <p>
                    {exp.period.from} - {exp.period.to}
                  </p>
                </div>
              </li>
            ))
          }
        </ul>
      </div>
    </section>

    <section class="grid grid-cols-12">
      <h4 class="text-3xl font-mainHead col-span-9">
        {info.beliefs["beyond coding"]}
      </h4>
      <div class="col-span-12 flex justify-end w-full py-8">
        <p class="w-1/2">
          {info.beliefs.content}
        </p>
      </div>
    </section>
  </section>
  <Footer nextPage="/projects" prevPage="/" />
</Layout>
